@page "/login"

@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager navMgr

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Login</h3>

        <AuthorizeView>
            <NotAuthorized>
                <div class="mb-3">
                    <label class="form-label">User Name</label>
                    <input type="text" class="form-control" @bind="userName" placeholder="Enter username">
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" @bind="password" placeholder="Enter password">
                </div>

                @if (!string.IsNullOrEmpty(errorLabel))
                {
                    <div class="alert alert-danger">@errorLabel</div>
                }

                <button class="btn btn-primary w-100" @onclick="LoginAsync">Log In</button>

                 <div class="text-center mt-3">
                    <span>Don't have an account?</span>
                    <button class="btn btn-link" @onclick="GoToRegister">Register</button>
                </div>
            </NotAuthorized>

            <Authorized>
                <div class="text-center">
                    <h4>Hello, @(context.User?.Identity?.Name ?? "Anonymous")</h4>
                    <p>You are already logged in.</p>
                    <button class="btn btn-secondary" @onclick="@(()=>navMgr.NavigateTo("/"))">Go Home</button>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@code{
    private string userName = "";
    private string password = "";
    private string? errorLabel;

    private async Task LoginAsync()
    {
        errorLabel = "";
        try
        {
            await ((AuthProvider)AuthProvider).Login(userName, password);
            navMgr.NavigateTo("/");
        }
        catch (Exception e)
        {
            errorLabel = $"Error: {e.Message}";
        }
    }

    
    private void GoToRegister()
    {
        navMgr.NavigateTo("/register");
    }
}

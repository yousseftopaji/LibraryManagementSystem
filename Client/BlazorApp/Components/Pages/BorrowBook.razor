@using DTOs
@using DTOs.Loan
@inject BlazorApp.Services.LoanService.ILoanService LoanService

<div class="mt-3">
    <button class="btn btn-success" @onclick="HandleBorrow" disabled="@isProcessing">
        @if (isProcessing)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
        }
        Borrow
    </button>
</div>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(isError ? "alert-danger" : "alert-success") mt-3" role="alert">
        @message
    </div>
}

@code {
    [Parameter]
    public required string ISBN { get; set; }

    [Parameter]
    public EventCallback OnBorrowSuccess { get; set; }

    private bool isProcessing = false;
    private string message = string.Empty;
    private bool isError = false;

    private async Task HandleBorrow()
    {
        isProcessing = true;
        message = string.Empty;
        isError = false;

        try
        {
            var createLoanDTO = new CreateLoanDTO
            {
                BookISBN = ISBN,
                Username = "Youssef" // TODO: Replace with actual logged-in username
            };

            await LoanService.CreateLoanAsync(createLoanDTO);
            message = "Book successfully borrowed!";
            isError = false;

            // Notify parent component to refresh book details
            await OnBorrowSuccess.InvokeAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error borrowing book: {ex.Message}");
            message = "Failed to borrow the book. Please try again.";
            isError = true;
        }
        finally
        {
            isProcessing = false;
        }
    }
}
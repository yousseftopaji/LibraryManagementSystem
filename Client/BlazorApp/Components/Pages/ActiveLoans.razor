@page "/loans/activeloans"
@using DTOs.Loan
@using DTOs.Error_Handler
@using System.Text.Json
@inject BlazorApp.Services.LoanService.ILoanService LoanService
@inject NavigationManager NavigationManager
@inject AuthProvider AuthProvider

<AuthorizeView>
    <Authorized>
        <div class="container mt-5">
            <h2 class="text-center mb-4">Active Loans</h2>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-warning text-center" role="alert">
                    @errorMessage
                </div>
            }

            @if (loans == null)
            {
                <div class="text-center text-muted fst-italic">Loading active loans...</div>
            }
            else if (loans.Count == 0)
            {
                <div class="text-center text-muted fst-italic">No active loans found.</div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var loan in loans)
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">Loan ID: @loan.LoanId</h5>
                                <small>Due: @loan.DueDate.ToString("yyyy-MM-dd")</small>
                            </div>
                            <p class="mb-1">Book ID: @loan.BookId</p>
                            <small>Borrowed: @loan.BorrowDate.ToString("yyyy-MM-dd") • Extensions: @loan.NumberOfExtensions</small>
                            <div class="mt-2">
                                <button class="btn btn-outline-primary btn-sm" @onclick="() => HandleExtendRequest(loan)">Extend Book</button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="container mt-5">
            <div class="alert alert-danger text-center">
                <h5>You must be logged in to view active loans.</h5>
                <button class="btn btn-primary mt-3" @onclick='() => NavigationManager.NavigateTo("/login")'>Go to Login</button>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

<ConfirmationDialog IsVisible="showDialog"
                    Title="Extend Loan"
                    Message="@($"Are you sure you want to extend the loan for Book ID {selectedLoan?.BookId}?")"
                    OnConfirm="OnConfirm"
                    OnCancel="OnCancel" />

@code {
    private List<LoanDTO>? loans;
    private string? errorMessage;
    private string? username;

    private LoanDTO? selectedLoan;
    private bool showDialog = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadActiveLoans();
    }

    private async Task LoadActiveLoans()
    {
        try
        {
            loans = await LoanService.GetActiveLoansAsync();
            errorMessage = null;
        }
        catch (Exception e)
        {
            errorMessage = ExtractError(e);
        }
    }
    private string ExtractError(Exception e)
    {
        try
        {
            var message = e.Message;
            Console.WriteLine(message);
            
            // Look for JSON content (starts with { and ends with })
            var jsonStart = message.IndexOf('{');
            var jsonEnd = message.LastIndexOf('}');
            
            if (jsonStart >= 0 && jsonEnd > jsonStart)
            {
                var jsonContent = message.Substring(jsonStart, jsonEnd - jsonStart + 1);
                var errorResponse = JsonSerializer.Deserialize<ErrorResponseDTO>(
                    jsonContent,
                    new JsonSerializerOptions { PropertyNameCaseInsensitive = true }
                );
                return errorResponse?.Details ?? errorResponse?.Message ?? "An unknown error occurred.";
            }
            
            // If no JSON found, return the original message
            return message;
        }
        catch (JsonException)
        {
            // If JSON parsing fails, return the original exception message
            return e.Message;
        }
    }

    private void HandleExtendRequest(LoanDTO loan)
    {
        selectedLoan = loan;
        showDialog = true;
    }

    private async Task OnConfirm()
    {
        try
        {
            if (selectedLoan != null)
            {
                await LoanService.ExtendLoanAsync(selectedLoan.LoanId);
                await LoadActiveLoans();
            }
        }
        catch (Exception e)
        {
            errorMessage = ExtractError(e);
        }
        finally
        {
            showDialog = false;
            selectedLoan = null;
        }
    }

    private void OnCancel()
    {
        showDialog = false;
        selectedLoan = null;
    }
}

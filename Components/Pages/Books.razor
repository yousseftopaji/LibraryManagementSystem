@page "/books"
@rendermode InteractiveServer
@using BlazorApp.Models
@using System.Net.Http.Json
@inject HttpClient Http

<h3>Books</h3>

<button class="btn btn-primary" @onclick="GetBooks">Get Books</button>

@if (books == null)
{
    <p class="text-muted fst-italic">Waiting for server connection...</p>
}
else
{
    <ul>
        @foreach (var book in books)
        {
            <li>@book.Title by @book.Author</li>
        }
    </ul>
}

@code {
    private List<Book>? books;

    /*private async Task GetBooks()
    {
        books = await Http.GetFromJsonAsync<List<Book>>("http://localhost:8080/api/books");
    }*/
    
    private async Task GetBooks()
    {
        // For now we simulate a response from the server
        // Later this will call the Java Spring Boot server
        books = await Http.GetFromJsonAsync<List<Book>>("api/books");
    }
}